# Server environment variables
# Copy this file to .env and set real values

# Port to run the API server
PORT=4000

# JWT secret for signing tokens (REQUIRED in production)
# Use a long random string. Example: openssl rand -hex 32
JWT_SECRET=replace_me

# Allowed CORS origins (comma-separated). Example for Vite dev:
# http://localhost:5173 or multiple origins: http://localhost:5173,http://127.0.0.1:5173
CORS_ORIGIN=http://localhost:5173

# Postgres connection string (required in production). Example (Supabase):
# DATABASE_URL=postgres://postgres:password@db.<your-project-ref>.supabase.co:5432/postgres
DATABASE_URL=

# Node environment (development|production|test)
NODE_ENV=development
